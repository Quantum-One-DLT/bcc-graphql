{
  "name": "bcc-graphql",
  "description": "A TypeScript monorepo. Includes a server package and API modules for flexible implementation",
  "engines": {
    "node": "^14"
  },
  "version": "5.1.0-beta.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "cleanup": "yarn workspaces run cleanup && shx rm -rf node_modules",
    "cli:install": "yarn workspace @bcc-graphql/cli global:add",
    "cli:uninstall": "yarn workspace @bcc-graphql/cli global:remove",
    "dev:init": "./scripts/dev_init.sh",
    "dev:cleanup": "shx rm -rf ./state ./bin",
    "mainnet:stack": "CONTEXT=$PWD NETWORK=mainnet . ./scripts/export_env.sh && docker-compose -p mainnet up --build -d",
    "mainnet:dev": "CONTEXT=$PWD NETWORK=mainnet . ./scripts/export_env.sh && yarn service-dependencies -p mainnet up --build",
    "mainnet:up": "yarn mainnet:stack && docker-compose -p mainnet logs -f",
    "mainnet:down": "docker-compose -p mainnet down --remove-orphans",
    "mainnet:server": "CONTEXT=$PWD NETWORK=mainnet . ./scripts/export_env.sh && yarn workspace @bcc-graphql/server start",
    "testnet:stack": "CONTEXT=$PWD NETWORK=testnet . ./scripts/export_env.sh && docker-compose -p testnet up --build -d",
    "testnet:dev": "CONTEXT=$PWD NETWORK=testnet . ./scripts/export_env.sh && yarn service-dependencies -p testnet up --build",
    "testnet:up": "yarn testnet:stack && docker-compose -p testnet logs -f",
    "testnet:down": "docker-compose -p testnet down --remove-orphans",
    "testnet:server": "CONTEXT=$PWD NETWORK=testnet . ./scripts/export_env.sh && yarn workspace @bcc-graphql/server start",
    "aurum -purple:stack": "CONTEXT=$PWD NETWORK=aurum -purple . ./scripts/export_env.sh && docker-compose -p aurum -purple up --build -d",
    "aurum -purple:dev": "CONTEXT=$PWD NETWORK=aurum -purple . ./scripts/export_env.sh && yarn service-dependencies -p aurum -purple up --build",
    "aurum -purple:up": "yarn aurum -purple:stack && docker-compose -p aurum -purple logs -f",
    "aurum -purple:down": "docker-compose -p aurum -purple down --remove-orphans",
    "aurum -purple:server": "CONTEXT=$PWD NETWORK=aurum -purple . ./scripts/export_env.sh && yarn workspace @bcc-graphql/server start",
    "aurum -qa:stack": "CONTEXT=$PWD NETWORK=aurum -qa . ./scripts/export_env.sh && docker-compose -p aurum -qa up --build -d",
    "aurum -qa:dev": "CONTEXT=$PWD NETWORK=aurum -qa . ./scripts/export_env.sh && yarn service-dependencies -p aurum -qa up --build",
    "aurum -qa:up": "yarn aurum -qa:stack && docker-compose -p aurum -qa logs -f",
    "aurum -qa:down": "docker-compose -p aurum -qa down --remove-orphans",
    "aurum -qa:server": "CONTEXT=$PWD NETWORK=aurum -qa . ./scripts/export_env.sh && yarn workspace @bcc-graphql/server start",
    "lint": "yarn workspaces run lint",
    "loadtest:cole-staging": "artillery run test/loadtest/cole-staging-config.yml",
    "publish-packages": "yarn workspaces run publish",
    "service-dependencies": "docker-compose config --services | grep -v \"bcc-graphql\" | xargs docker-compose",
    "test": "yarn workspaces run test"
  },
  "contributors": [
    "Rhys Bartels-Waller <rhys.bartelswaller@blockchain-company.io> (https://tbco.io)",
    "Sam Jeston <sam.jeston@gmail.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/The-Blockchain-Company/bcc-graphql/issues"
  },
  "homepage": "https://github.com/The-Blockchain-Company/bcc-graphql#README.md",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.15.2",
    "@graphql-codegen/typescript": "^1.15.2",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.15.2",
    "@graphql-codegen/typescript-resolvers": "^1.15.2",
    "@types/bunyan": "^1.8.6",
    "@types/clear": "^0.1.0",
    "@types/dockerode": "^2.5.33",
    "@types/figlet": "^1.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^26.0.3",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.set": "^4.3.6",
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.7",
    "@types/pg": "^7.14.4",
    "@types/set-interval-async": "^1.0.0",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "apollo-boost": "^0.4.9",
    "apollo-link-http": "^1.5.17",
    "apollo-server-core": "^2.15.0",
    "apollo-server-testing": "^2.15.0",
    "async": "^3.2.0",
    "bignumber.js": "^9.0.0",
    "cross-fetch": "^3.0.4",
    "delay": "^4.4.0",
    "env-paths": "^2.2.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-watch": "^7.0.0",
    "graphql": "14.5.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tag": "^2.10.3",
    "jest": "^26.0.1",
    "node-fetch": "^2.6.1",
    "p-retry": "^4.2.0",
    "pm2": "^4.5.6",
    "shx": "^0.3.2",
    "tmp-promise": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "resolutions": {
    "**/graphql": "14.5.8"
  },
  "dependencies": {}
}
